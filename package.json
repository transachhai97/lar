{
    "private": true,
    "scripts": {
        "dev": "yarn development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "yarn development -- --watch",
        "watch-poll": "yarn watch -- --watch-poll",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --disable-host-check --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "yarn production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "format": "prettier --list-different --write \"resources/assets/**/*.{js,jsx,css,scss}\"",
        "eslint": "eslint \"resources/assets/**/*.{js,jsx}\" --fix --quiet",
        "stylelint": "stylelint \"resources/assets/**/*.{css,scss}\" --fix",
        "clean": "yarn format && yarn eslint && yarn stylelint"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-transform-react-jsx": "^6.24.1",
        "babel-plugin-transform-react-pug": "^7.0.1",
        "cross-env": "^7.0",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "eslint-plugin-react-pug": "^0.8.4",
        "laravel-mix": "^5.0.1",
        "prettier": "^2.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-logger": "^3.0.6",
        "resolve-url-loader": "^3.1.0",
        "stylelint": "^13.6.0",
        "stylelint-config-prettier": "^8.0.1",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-order": "^4.1.0",
        "stylelint-prettier": "^1.1.2",
        "webpack-livereload-plugin": "^2.3.0"
    },
    "browserslist": {
        "production": [
            ">0%"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            "transform-react-pug",
            "transform-react-jsx"
        ]
    },
    "dependencies": {
        "axios": "^0.19.2",
        "bootstrap": "^4.5.0",
        "connected-react-router": "^6.8.0",
        "history": "^4.10.1",
        "i18next": "^19.4.5",
        "jquery": "^3.5.1",
        "lodash": "^4.17.15",
        "popper.js": "^1.16.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-i18next": "^11.5.0",
        "react-redux": "^7.2.0",
        "react-router": "^5.2.0",
        "redux": "^4.0.5",
        "redux-saga": "^1.1.3",
        "redux-thunk": "^2.3.0",
        "sass": "^1.26.8",
        "sass-loader": "^8.0.2"
    }
}
